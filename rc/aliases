# Custom functions, maybe should move these to a different file
function enc() {
openssl aes-256-cbc -in "$1" -out "$1.enc";
}
function dcyp() {
local file=$1;
openssl aes-256-cbc -d -in "$1" -out "${file%.*}";
}

export NOPK="-o PubkeyAuthentication=no"

