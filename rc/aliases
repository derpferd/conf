#### Amazon Stuff ####

# SAM
alias sam='brazil-build-tool-exec sam'

# LPT
alias bblpt='brazil-build && yes | brazil-build synthesize-cloud-formation && yes | brazil-build synthesize-pipeline && yes | brazil-build synthesize'

# Brazil
alias bwsync='bws --sync --md'
alias pyrun='brazil-runtime-exec'
alias bbrun='bb && pyrun'

#### Other Stuff ####
# Basic
alias x='exit'

# Python
alias python='python3'
alias py='python'
alias py3='python3'
alias pser='python3 -m http.server'
alias spip='sudo -H pip'
alias pipi='sudo -H pip install'

# Editor
alias v='vim'

# Git: Stole these from Maz@https://github.com/kasldfh/dotfiles
alias gpm='git push origin mainline'
alias gplm='git pull origin mainline'
alias gpd='git push origin $(whoami)-dev'
alias gpld='git pull origin $(whoami)-dev'
alias gcm="git commit -m "
alias gc="git commit "
alias gch="git checkout "
alias gchb="git checkout -b "
alias gs="git status"
alias gd="git diff "
alias ga="git add "
alias gr="git rm "

# ZSH
alias ext='extract'
