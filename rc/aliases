#### Amazon Stuff ####

# SAM
alias sam='brazil-build-tool-exec sam'

# LPT
alias bblpt='brazil-build && yes | brazil-build synthesize-cloud-formation && yes | brazil-build synthesize-pipeline && yes | brazil-build synthesize'

# Brazil
alias bwsync='bws --sync --md'
alias pyrun='brazil-runtime-exec'
alias bbrun='bb && pyrun'

# STT Stuff
alias ops-corp="sshenv -s Prod LDMOpsTools/CORP-NA"
alias ops-na="sshenv -s Prod LDMOpsTools/US-EAST"
alias ops-eu="sshenv -s Prod LDMOpsTools/EU-WEST"
alias ops-fe="sshenv -s Prod LDMOpsTools/US-WEST"
alias ops-cn="sshenv -s Prod LDMOpsTools/CN-NORTH"

function lmsping() {
    /apollo/env/envImprovement/bin/bsfcli -h $1 -p 7777 -s LocalizationMetadataServiceBSF -m Get --args '{"type":"StringEntity","name":"lms-vip-url-check-string","language":"en_US"}'
}

export CORP="-o ProxyCommand=None"

#### Other Stuff ####
# Basic
alias x='exit'

# Python
alias python='python3'
