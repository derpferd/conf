# Apt-get
alias sai='sudo apt install'
alias sauu='sudo apt update && sudo apt upgrade -y'
alias sau='sudo apt update'

# Basic
alias x='exit'

if (( $+commands[lsb_release] )) ; then
    # Ubuntu Only
    alias o='xdg-open &> /dev/null'  # this is to get rid of random errors from nautilus
elif (( $+commands[brew] )) ; then
    alias o='open'
fi

