alias gpld='git pull origin $(whoami)-dev'
alias gcm="git commit -m "
alias gc="git commit "
alias gch="git checkout "
alias gchb="git checkout -b "
alias gs="git status"
alias gd="git diff "
alias ga="git add "
alias gr="git rm "

